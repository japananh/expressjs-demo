extends ../layouts/common
block content			
	h1.text-dark.mb-4.mt-4 Create User
	if errors
		each error in errors
			.alert.alert-danger= error
	form(action='/users/create', method='POST', enctype='multipart/form-data')
		.form-group
			label.text-dark(for='name') Username
			input#name.form-control.mb-2(type='text', name='name', value=values ? values.name : '')

		.form-group
			label.text-dark(for='email') Email
			input#email.form-control.mb-2(type='email', name='email', value=values ? values.email : '')

		.form-group
			label.text-dark(for='phoneNumber') Phone number
			input#phoneNumber.form-control.mb-2(type='text', name='phoneNumber', value=values ? values.phoneNumber : '')

		.form-group
			label(for='avatar') Image
			input#avatar.form-control-file.mb-2(type='file', name='avatar')
				
		button.btn.btn-info Create