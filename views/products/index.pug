extends ../layouts/common
block content
	h1.mt-5 Products
	.d-flex.align-items-center.mb-4
		form.d-flex.ml-auto(action='/products/search', method='GET')
			input#input.pl-2(type='text', name='q', placeholder='Search')
			button.btn.btn-info.ml-2 Search

	//- Add style to make cards have collapsable margin
	.row
		each product in products
			.col-sm-6.col-md-4.col-lg-3
				.card.mb-5
					img.card-img-top(src= product.image, alt= product.name)
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
						p.card-text= product.price
						a.btn.btn-info(href='/cart/add/' + product.id) Add to cart

	nav(aria-label='Change page')
		ul.pagination.justify-content-center
			li#prev.page-item
				a.page-link(href='#', tabindex='-1', aria-disabled='true')
					span(aria-hidden='true') &laquo;
			li.page-item.active(aria-current='page')
				a.page-link(href='#') 1
			li.page-item
				a.page-link(href='#') 2
			li.page-item
				a.page-link(href='#') 3
			li#next.page-item
				a.page-link(href='#')
					span(aria-hidden='true') &raquo;